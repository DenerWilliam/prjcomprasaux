# Arquivo de exemplo para variáveis de ambiente
# Copie este arquivo para .env e configure as variáveis conforme necessário

# Configurações do Django
SECRET_KEY=sua-chave-secreta-aqui
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,seu-dominio.com

# Configurações do banco de dados
# Para SQLite (desenvolvimento)
DATABASE_URL=sqlite:///db.sqlite3

# Para PostgreSQL (produção)
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/nome_do_banco

# Configurações de URLs das APIs
ITEMS_API_URL=http://localhost:8000/api/produtos/
BASKET_API_URL=http://localhost:8000/api/

# Configurações de email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app

# Configurações de arquivos estáticos
STATIC_ROOT=/var/www/prjcomprasaux/static/
MEDIA_ROOT=/var/www/prjcomprasaux/media/

# Configurações de segurança
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Configurações de logging
LOG_LEVEL=INFO
